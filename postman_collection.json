              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assessmentId\": \"{{assessment_id}}\",\n  \"userId\": \"{{user_id}}\",\n  \"score\": 85,\n  \"passed\": true,\n  \"completedAt\": \"2024-01-15T10:30:00Z\"\n}"
            },
            "url": {
